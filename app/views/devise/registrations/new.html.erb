<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "auth-form"}) do |f| %>
  <h2>Sign up</h2>
  <%= devise_error_messages! %>

  <div class="email">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, :placeholder => "Email address", :class => "form-control" %>
  </div>

  <div class="username">
    <%= f.label :username %>
    <%= f.text_field :username, :placeholder => "Username", :class => "form-control" %>
  </div>

  <div class="password">
    <%= f.label :password %>
    <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
  </div>

  <div class="password-confirmation">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :placeholder => "Password", :class => "form-control" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
  <div>
<% end %>