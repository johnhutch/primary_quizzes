<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "auth-form"}) do |f| %>
  <h2>Sign up</h2>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email address", :class => "form-control" %>

  <%= f.label :username %>
  <%= f.text_field :username, :placeholder => "Username", :class => "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :placeholder => "Password", :class => "form-control" %>

  <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
