<% if user_signed_in? %>

<h1>You have successfully log in.</h3>
<%= link_to 'Log out <i class="glyphicon glyphicon-remove-sign"></i>'.html_safe, destroy_user_session_path, :method => :delete, :class => "btn btn-default" %>

<% else %>

<h1>Welcome, please log in or sign up.</h1>
<%= link_to 'Log in <i class="glyphicon glyphicon-user"></i>'.html_safe, new_user_session_path, :method => :get, :class => "btn btn-default" %>
<%= link_to "Sign up", new_user_registration_path, :method => :get, :class => "btn btn-default" %>

<% end %>
